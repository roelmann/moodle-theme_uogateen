{{!
    @template theme_uogateen/moduleguidemodal

    uogateen Staff blocks modal display.

    Context variables required for this template:
        *

    Example context (json):
    {

    }
}}

<div class="modalcards moduleguidemodal">
{{#modulecode}}
    <div class="card">
        <div class="card-header card-warning bg-warning">
            <h3 class="card-title">
                {{{modulecode}}}
                {{#moduletitle}}
                    {{{moduletitle}}}
                {{/moduletitle}}
            </h3>
        </div>
        <div class="card-block">
            <div class="row">
                {{#modintro}}
                    <div class="mg-intro col-md-12">
                    <div class="card">
                        <div class="card-header card-default bg-primary">
                            <h3 class="card-title">Module Introduction</h3>
                        </div>
                        <div class = "card-block">
                            {{{modintro}}}
                        </div>
                    </div>
                    </div>
                {{/modintro}}
            </div>
            <div class="row">
                {{#modval_level}}
                    <div class="mg-validated col-md-8">
                    <div class="card ">
                        <div class="card-header card-default bg-primary">
                            <h3 class="card-title">Validated Details</h3>
                        </div>
                        <div class = "card-block">
                            <div class="row">
                                <h4 class="valtitle col-md-3">Module Title:</h4>
                                <p class="valdetail col-md-9">{{{moduletitle}}}</p>
                                <h3 class="text-alert">May not be needed - in heading anyway</h3>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Module Code:</h4>
                                <p class="valdetail col-md-9">{{{modulecode}}}</p>
                                <h3 class="text-alert">May not be needed - in heading anyway</h3>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">School:</h4>
                                <p class="valdetail col-md-9">{{{modval_school}}}</p>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">CAT points:</h4>
                                <p class="valdetail col-md-9">{{{modval_catpoints}}}</p>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Level of Study:</h4>
                                <p class="valdetail col-md-9">{{{modval_level}}}</p>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Pre-Requisites:</h4>
                                <p class="valdetail col-md-9">{{{modval_prerequ}}}</p>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Co-Requisites:</h4>
                                <p class="valdetail col-md-9">{{{modval_corequ}}}</p>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Restrictions:</h4>
                                <p class="valdetail col-md-9">{{{modval_restrictions}}}</p>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Brief Description:</h4>
                                <p class="valdetail col-md-9">{{{modval_desc}}}</p>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Indicative Syllabus:</h4>
                                <p class="valdetail col-md-9">{{{modval_syll}}}</p>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Learning Outcomes:</h4>
                                <p class="valdetail col-md-9">{{{modval_lo}}}</p>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Learning and Teaching Activities:</h4>
                                <p class="valdetail col-md-9">{{{modval_activities}}}</p>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Assessments:</h4>
                                <p class="valdetail col-md-9">{{{modval_assessments}}}</p>
                                <h3 class="text-alert">May not be needed - separate assessment section</h3>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Special Assessment Requirements:</h4>
                                <p class="valdetail col-md-9">{{{modval_specass}}}</p>
                                <h3 class="text-alert">May not be needed - separate assessment section</h3>
                            </div>
                            <div class="row">
                                <h4 class="valtitle col-md-3">Indicative Resources:</h4>
                                <p class="valdetail col-md-9">{{{modval_resources}}}</p>
                            </div>
                        </div>
                    </div>
                    </div>
                {{/modval_level}}
                {{#modstructure}}
                    <div class="mg-structure col-md-4">
                    <div class="card">
                        <div class="card-header card-default  bg-primary">
                            <h3 class="card-title">Module Content</h3>
                        </div>
                        <div class = "card-block">
                            {{#modstructurecontent}} {{{modstructurecontent}}} {{/modstructurecontent}}
                        </div>
                    </div>
                    </div>
                {{/modstructure}}
            </div>
            <div class = "row">
                {{#modassessments}}
                    <div class="mg-assessment col-md-12">
                    <div class="card">
                        <div class="card-header card-default bg-primary">
                            <h3 class="card-title">Module Assessment</h3>
                        </div>
                        <div class = "card-block">
                                {{{modassessments}}}
                        </div>
                    </div>
                    </div>
                {{/modassessments}}
            </div>
            <div class = "row">
                {{#modaddinfo}}
                    <div class="mg-addinfo col-md-12">
                    <div class="card">
                        <div class="card-header card-default bg-primary">
                            <h3 class="card-title">Module Additional Information</h3>
                        </div>
                        <div class = "card-block">
                            {{{modaddinfo}}}
                        </div>
                    </div>
                    </div>
                {{/modaddinfo}}
            </div>
            <div class = "row">
                {{#modresource}}
                    <div class="mg-resources col-md-12">
                    <div class="card">
                        <div class="card-header card-default bg-primary">
                            <h3 class="card-title">Module Resources</h3>
                        </div>
                        <div class = "card-block">
                            {{{modresource}}}
                        </div>
                    </div>
                    </div>
                {{/modresource}}
            </div>
        </div>
    </div>
{{/modulecode}}
</div>

