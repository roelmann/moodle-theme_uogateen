{{!
    @template theme_uogateen/useralert

    uogateen User Alert display.

    Context variables required for this template:
    * hasuseralert
    * useralert
    * enablealert
    * alerttype
    * alertcontent
}}

{{#useralert}}
    {{#enablealert}}
        <div class="useralerts alert alert-{{{alerttype}}}">
            <a class="close" data-dismiss="alert" href="#" alt="Close button"><i class="fa fa-times-circle"></i></a>
            {{{alertcontent}}}
        </div>
    {{/enablealert}}
{{/useralert}}
